<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:orientation="vertical" >
	    <TextView 
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:gravity="center"
	        android:text="展示SQLite     by leo"
	        />
	    
		    <LinearLayout android:layout_height="wrap_content"
		        android:layout_width="match_parent"
		        android:orientation="horizontal"
		        >
		    <Button android:id="@+id/sqlite_insert"
		        android:layout_height="wrap_content"
		        android:layout_width="0sp"
		        android:layout_weight="1"
		        android:gravity="center"
		        android:text="insert"
		        />
		    <Button android:id="@+id/sqlite_insert_detail"
		        android:layout_height="wrap_content"
		        android:layout_width="0sp"
		        android:layout_weight="1"
		        android:gravity="center"
		        android:text="insert detail"
		        />
		        
		    </LinearLayout>
	    
	    <Button android:id="@+id/sqlite_update"
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:gravity="center"
	        android:layout_gravity="center"
	        android:text="update"
	        />
	    <Button android:id="@+id/sqlite_delete"
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:gravity="center"
	        android:layout_gravity="center"
	        android:text="delete"
	        />
	    <Button android:id="@+id/sqlite_query"
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:gravity="center"
	        android:layout_gravity="center"
	        android:text="query"
	        />
		
			<ListView android:id="@+id/students_list_view"
				    android:layout_width="match_parent"
				    android:layout_height="0sp"
				    android:layout_gravity="center_horizontal"
				    android:layout_weight="1"
				    >
			</ListView>
		
	</LinearLayout>
	
    
</RelativeLayout>

